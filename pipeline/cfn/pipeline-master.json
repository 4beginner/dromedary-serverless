{
  "AWSTemplateFormatVersion":"2010-09-09",
  "Description":"Master dromedary stack that calls nested stacks",
  "Parameters":{
    "TemplateBucketName":{
      "Type":"String",
      "Description":"S3 bucket name for all the CloudFormation templates used in the pipeline."
    },
    "GitHubToken":{
      "NoEcho":"true",
      "Type":"String",
      "Description":"Secret. It might look something like 9b189a1654643522561f7b3ebd44a1531a4287af OAuthToken with access to Repo. Go to https://github.com/settings/tokens"
    },
    "GitHubUser":{
      "Type":"String",
      "Description":"GitHub UserName",
      "Default":"stelligent"
    },
    "GitHubRepo":{
      "Type":"String",
      "Description":"GitHub Repo to pull from. Only the Name. not the URL",
      "Default":"dromedary"
    },
    "GitHubBranch":{
      "Type":"String",
      "Description":"Branch to use from Repo. Only the Name. not the URL",
      "Default":"master"
    },
    "GulpStaticAnalysisTask":{
      "Type":"String",
      "Description":"Gulp task name for Static Analysis",
      "Default":"lint"
    },
    "GulpUnitTestTask":{
      "Type":"String",
      "Description":"Gulp task name for Unit Testing",
      "Default":"test"
    },
    "GulpLaunchTask":{
      "Type":"String",
      "Description":"Gulp task name for launching stack",
      "Default":"cfn:up"
    },
    "GulpDeployAppTask":{
      "Type":"String",
      "Description":"Gulp task name for deploying application",
      "Default":"app:uploadLambda"
    },
    "GulpDeploySiteTask": {
      "Type": "String",
      "Description": "Gulp task name for deploying application",
      "Default": "app:uploadSite"
    },
    "GulpDeployConfigTask":{
      "Type":"String",
      "Description":"Gulp task name for deploying application",
      "Default":"app:uploadConfig"
    },
    "GulpFunctionalTestTask": {
      "Type": "String",
      "Description": "Gulp task name for deploying application",
      "Default": "test-functional"
    },
    "GulpProductionDNSTask":{
      "Type":"String",
      "Description":"Gulp task name for deploying application",
      "Default":"cfn:updateDNS"
    }
  },
  "Mappings" : {
    "EndpointMap" : {
      "us-east-1": {
        "s3": "https://s3.amazonaws.com"
      },
      "us-west-2": {
        "s3": "https://s3-us-west-2.amazonaws.com"
      },
      "eu-west-1": {
        "s3": "https://s3-eu-west-1.amazonaws.com"
      },
      "ap-northeast-1": {
        "s3": "https://s3-ap-northeast-1.amazonaws.com"
      }
    }
  },
  "Resources": {
    "CodePipelineRole":{
      "Type":"AWS::IAM::Role",
      "Properties":{
        "AssumeRolePolicyDocument":{
          "Statement":[
            {
              "Sid":"1",
              "Effect":"Allow",
              "Principal":{
                "Service":[
                  "codepipeline.amazonaws.com"
                ]
              },
              "Action":"sts:AssumeRole"
            }
          ]
        },
        "Path":"/",
        "Policies":[
          {
            "PolicyName":"CodePipelinePolicy",
            "PolicyDocument":{
              "Version":"2012-10-17",
              "Statement":[
                {
                  "Action":[
                    "s3:GetObject",
                    "s3:GetObjectVersion",
                    "s3:GetBucketVersioning"
                  ],
                  "Resource":"*",
                  "Effect":"Allow"
                },
                {
                  "Action":[
                    "s3:PutObject"
                  ],
                  "Resource":[
                    "arn:aws:s3:::codepipeline*",
                    "arn:aws:s3:::dromedary*",
                    "arn:aws:s3:::elasticbeanstalk*"
                  ],
                  "Effect":"Allow"
                },
                {
                  "Action":[
                    "codedeploy:CreateDeployment",
                    "codedeploy:GetApplicationRevision",
                    "codedeploy:GetDeployment",
                    "codedeploy:GetDeploymentConfig",
                    "codedeploy:RegisterApplicationRevision"
                  ],
                  "Resource":"*",
                  "Effect":"Allow"
                },
                {
                  "Action":[
                    "elasticbeanstalk:*",
                    "ec2:*",
                    "elasticloadbalancing:*",
                    "autoscaling:*",
                    "cloudwatch:*",
                    "s3:*",
                    "sns:*",
                    "cloudformation:*",
                    "rds:*",
                    "sqs:*",
                    "ecs:*",
                    "iam:PassRole"
                  ],
                  "Resource":"*",
                  "Effect":"Allow"
                },
                {
                  "Action":[
                    "lambda:InvokeFunction",
                    "lambda:ListFunctions"
                  ],
                  "Resource":"*",
                  "Effect":"Allow"
                }
              ]
            }
          }
        ]
      }
    },
    "CodePipelineLambdaRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyName": "LambdaPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:*"
                  ],
                  "Resource": [
                    "arn:aws:logs:*:*:*"
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "codepipeline:GetJobDetails",
                    "codepipeline:PutJobSuccessResult",
                    "codepipeline:PutJobFailureResult"
                  ],
                  "Resource": [
                    "*"

                  ]
                },
                {
                  "Action":[
                    "s3:*",
                    "lambda:*",
                    "cloudformation:*",
                    "iam:PassRole"
                  ],
                  "Resource":"*",
                  "Effect":"Allow"
                }
              ]
            }
          }
        ]
      }
    },
    "CodePipelineNpmLambda":{
      "Type":"AWS::Lambda::Function",
      "DependsOn":[
        "CodePipelineLambdaRole"
      ],
      "Properties":{
        "Code" : {
          "S3Bucket":{ "Ref": "TemplateBucketName" },
          "S3Key": "pipeline-lambda.zip"
        },
        "Role":{ "Fn::GetAtt":[ "CodePipelineLambdaRole", "Arn" ] },
        "Description":"Run NPM tasks for pipeline",
        "Timeout":300,
        "Handler":"index.npmHandler",
        "Runtime":"nodejs",
        "MemorySize":512
      }
    },
    "CodePipelineGulpLambda":{
      "Type":"AWS::Lambda::Function",
      "DependsOn":[
        "CodePipelineLambdaRole"
      ],
      "Properties":{
        "Code" : {
          "S3Bucket":{ "Ref": "TemplateBucketName" },
          "S3Key": "pipeline-lambda.zip"
        },
        "Role":{ "Fn::GetAtt":[ "CodePipelineLambdaRole", "Arn" ] },
        "Description":"Run gulp tasks for pipeline",
        "Timeout":300,
        "Handler":"index.gulpHandler",
        "Runtime":"nodejs",
        "MemorySize":512
      }
    },
    "ArtifactBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
      }
    },
    "DromedaryPipeline": {
      "Type": "AWS::CodePipeline::Pipeline",
      "DependsOn": [
        "CodePipelineRole",
        "CodePipelineNpmLambda",
        "CodePipelineGulpLambda"
      ],
      "Properties": {
        "DisableInboundStageTransitions": [ ],
        "RoleArn": { "Fn::GetAtt": [ "CodePipelineRole", "Arn" ] },
        "Stages": [
          {
            "Name": "Source",
            "Actions": [
              {
                "InputArtifacts": [],
                "Name": "Source",
                "ActionTypeId": {
                  "Category": "Source",
                  "Owner": "ThirdParty",
                  "Version": "1",
                  "Provider": "GitHub"
                },
                "Configuration": {
                  "Owner": {
                    "Ref": "GitHubUser"
                  },
                  "Repo": {
                    "Ref": "GitHubRepo"
                  },
                  "Branch": {
                    "Ref": "GitHubBranch"
                  },
                  "OAuthToken": {
                    "Ref": "GitHubToken"
                  }
                },
                "OutputArtifacts": [
                  {
                    "Name": "SourceOutput"
                  }
                ],
                "RunOrder": 1
              }
            ]
          },
          {
            "Name": "Commit",
            "Actions": [
              {
                "InputArtifacts":[
                  {
                    "Name": "SourceOutput"
                  }
                ],
                "Name":"Dependencies",
                "ActionTypeId":{
                  "Category":"Invoke",
                  "Owner":"AWS",
                  "Version":"1",
                  "Provider":"Lambda"
                },
                "Configuration":{
                  "FunctionName":{
                    "Ref":"CodePipelineNpmLambda"
                  },
                  "UserParameters":"install"
                },
                "OutputArtifacts": [
                  {
                    "Name": "SourceInstalledOutput"
                  }
                ],
                "RunOrder":1
              },
              {
                "InputArtifacts":[
                  {
                    "Name": "SourceInstalledOutput"
                  }
                ],
                "Name":"StaticAnalysis",
                "ActionTypeId":{
                  "Category":"Invoke",
                  "Owner":"AWS",
                  "Version":"1",
                  "Provider":"Lambda"
                },
                "Configuration":{
                  "FunctionName":{
                    "Ref":"CodePipelineGulpLambda"
                  },
                  "UserParameters":{"Ref":"GulpStaticAnalysisTask"}
                },
                "OutputArtifacts": [
                ],
                "RunOrder":2
              },
              {
                "InputArtifacts":[
                  {
                    "Name": "SourceInstalledOutput"
                  }
                ],
                "Name":"UnitTest",
                "ActionTypeId":{
                  "Category":"Invoke",
                  "Owner":"AWS",
                  "Version":"1",
                  "Provider":"Lambda"
                },
                "Configuration":{
                  "FunctionName":{
                    "Ref":"CodePipelineGulpLambda"
                  },
                  "UserParameters":{"Ref":"GulpUnitTestTask"}
                },
                "OutputArtifacts": [
                ],
                "RunOrder": 2
              }
            ]
          },
          {
            "Name": "Acceptance",
            "Actions": [
              {
                "InputArtifacts":[
                  {
                    "Name": "SourceInstalledOutput"
                  }
                ],
                "Name":"Launch",
                "ActionTypeId":{
                  "Category":"Invoke",
                  "Owner":"AWS",
                  "Version":"1",
                  "Provider":"Lambda"
                },
                "Configuration":{
                  "FunctionName":{
                    "Ref":"CodePipelineGulpLambda"
                  },
                  "UserParameters":{"Ref":"GulpLaunchTask"}
                },
                "OutputArtifacts": [
                ],
                "RunOrder": 1
              },
              {
                "InputArtifacts":[
                  {
                    "Name": "SourceInstalledOutput"
                  }
                ],
                "Name":"UploadLambda",
                "ActionTypeId":{
                  "Category":"Invoke",
                  "Owner":"AWS",
                  "Version":"1",
                  "Provider":"Lambda"
                },
                "Configuration":{
                  "FunctionName":{
                    "Ref":"CodePipelineGulpLambda"
                  },
                  "UserParameters":{"Ref":"GulpDeployAppTask"}
                },
                "OutputArtifacts": [
                ],
                "RunOrder": 2
              },
              {
                "InputArtifacts":[
                  {
                    "Name": "SourceInstalledOutput"
                  }
                ],
                "Name":"UploadSite",
                "ActionTypeId":{
                  "Category":"Invoke",
                  "Owner":"AWS",
                  "Version":"1",
                  "Provider":"Lambda"
                },
                "Configuration":{
                  "FunctionName":{
                    "Ref":"CodePipelineGulpLambda"
                  },
                  "UserParameters":{"Ref":"GulpDeploySiteTask"}
                },
                "OutputArtifacts": [
                ],
                "RunOrder": 2
              },
              {
                "InputArtifacts":[
                  {
                    "Name": "SourceInstalledOutput"
                  }
                ],
                "Name":"UploadConfig",
                "ActionTypeId":{
                  "Category":"Invoke",
                  "Owner":"AWS",
                  "Version":"1",
                  "Provider":"Lambda"
                },
                "Configuration":{
                  "FunctionName":{
                    "Ref":"CodePipelineGulpLambda"
                  },
                  "UserParameters":{"Ref":"GulpDeployConfigTask"}
                },
                "OutputArtifacts": [
                ],
                "RunOrder": 2
              },
              {
                "InputArtifacts":[
                  {
                    "Name": "SourceInstalledOutput"
                  }
                ],
                "Name":"FunctionalTest",
                "ActionTypeId":{
                  "Category":"Invoke",
                  "Owner":"AWS",
                  "Version":"1",
                  "Provider":"Lambda"
                },
                "Configuration":{
                  "FunctionName":{
                    "Ref":"CodePipelineGulpLambda"
                  },
                  "UserParameters":{"Ref":"GulpFunctionalTestTask"}
                },
                "OutputArtifacts": [
                ],
                "RunOrder": 3
              }
            ]
          },
          {
            "Name": "Production",
            "Actions": [
              {
                "InputArtifacts":[
                  {
                    "Name": "SourceInstalledOutput"
                  }
                ],
                "Name":"SwitchDNS",
                "ActionTypeId":{
                  "Category":"Invoke",
                  "Owner":"AWS",
                  "Version":"1",
                  "Provider":"Lambda"
                },
                "Configuration":{
                  "FunctionName":{
                    "Ref":"CodePipelineGulpLambda"
                  },
                  "UserParameters":{"Ref":"GulpProductionDNSTask"}
                },
                "OutputArtifacts": [
                ],
                "RunOrder": 1
              }
            ]
          }
        ],
        "ArtifactStore": {
          "Type": "S3",
          "Location": { "Ref": "ArtifactBucket" }
        }
      }
    }
  },
  "Outputs":{
    "StackName": {
      "Value": { "Ref": "AWS::StackName" }
    },
    "CodePipelineNpmLambdaArn" : {
      "Value" : { "Fn::GetAtt" : [ "CodePipelineNpmLambda", "Arn" ] },
      "Description" : "NPM Lambda Arn"
    },
    "CodePipelineGulpLambdaArn" : {
      "Value" : { "Fn::GetAtt" : [ "CodePipelineGulpLambda", "Arn" ] },
      "Description" : "Gulp Lambda Arn"
    },
    "ArtifactBucket": {
      "Value": { "Ref": "ArtifactBucket" }
    }
  }
}